@using WebAppEvaluacionEmanuel.Data.Models
@model Cliente
@{
    ViewData["Title"] = "Detalle del cliente";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>Detalle del cliente @(Model.NoCliente)</h4>
                <form>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">No. de cliente</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@(Model.NoCliente)" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@(Model.Nombre)" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Apellido paterno</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@(Model.ApellidoPaterno)" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Apellido materno</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@(Model.ApellidoMaterno)" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Domicilio</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@(Model.Domicilio)" readonly>
                        </div>
                    </div>
                    <a class="btn btn-primary" asp-action="Index">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>